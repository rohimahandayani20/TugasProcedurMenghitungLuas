 */
public class Segitiga {
  int alas,tinggi;
    double luas;
    
    
    void tampilSegitiga(){
    luas = alas * tinggi * 0.5;
    System.out.println("SEGITIGA");
    System.out.println("Alas        : "+alas);
    System.out.println("Tinggi      : "+tinggi);
    System.out.println("LUAS        : "+luas+"\n");
    }    
}
